{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "build",
        "rootDirs": ["src", "../shared"],
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["../shared/*"]
        }
    },
    "include": ["src/**/*.ts", "../shared/**/*.ts"],
    "exclude": ["node_modules"]
}
